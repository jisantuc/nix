if test -n "$HOME"; then
    NIX_LINK="$HOME/.nix-profile"

    if ! test -L "$NIX_LINK"; then
        echo "creating $NIX_LINK" >&2
        _NIX_DEF_LINK=@localstatedir@/nix/profiles/default
        @coreutils@/ln -s "$_NIX_DEF_LINK" "$NIX_LINK"
    fi

    export PATH=$NIX_LINK/bin:@prefix@/bin:$PATH
fi
